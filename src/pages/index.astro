    >
      <div class="glitch-wrapper">
        <div class="glitch" data-text="<Name here>">&lt;Name here&gt;</div>
      </div>

      <!-- marquee starts -->
      <div class="relative w-full overflow-hidden py-4">
        <div class="animate-marquee flex w-[200%]">
          <ul class="flex w-1/2 justify-around text-lg">
            <li>1</li>
            <li>2</li>
            <li>3</li>
            <li>4</li>
            <li>5</li>
